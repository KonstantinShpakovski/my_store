<% content_for(:head) do %>
    <%= javascript_include_tag 'main/new_items.js' %>
<% end %>
<h1>Crop Item Image</h1>

<%= image_tag @item.images.first.image_url(:large), id: "cropbox" %>

<h4>Preview</h4>
<div style="width:100px; height:100px; overflow:hidden">
  <%= image_tag @item.images.first.image_url(:large), :id => "preview" %>
</div>

<%= form_for @item.images.first,  :url => image_path(@item.images.first.id)  do |f|%>
    <% %w[x y w h].each do |attribute| %>
        <%= f.hidden_field "crop_#{attribute}" %>
    <% end %>
    <div class="actions">
      <%= f.submit "Crop" %>
    </div>
<% end %>